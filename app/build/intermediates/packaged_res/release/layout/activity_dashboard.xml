<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary_color"
            app:titleTextColor="@color/white"
            app:navigationIcon="@drawable/ic_menu"
            app:navigationIconTint="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="34Layer"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_bold" />

            <TextView
                android:id="@+id/tvServerStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="16dp"
                android:text="Server Online"
                android:textColor="@color/green_500"
                android:textSize="12sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_bold" />

        </androidx.appcompat.widget.Toolbar>

        <!-- Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Dashboard Animation -->
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/dashboardAnimation"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="24dp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true" />

                <!-- Welcome Text -->
                <TextView
                    android:id="@+id/tvWelcome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:gravity="center"
                    android:text="Halo User, Selamat Datang Di 34Layer"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/on_background_color"
                    android:fontFamily="@font/roboto_bold" />

                <!-- Feature Cards -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Web MultiPorting Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardWebMultiPorting"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="8dp"
                        app:cardBackgroundColor="@color/surface_color"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="20dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_marginEnd="20dp"
                                android:src="@drawable/ic_web_multiporting"
                                app:tint="@color/primary_color" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Web MultiPorting"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/on_surface_color"
                                    android:fontFamily="@font/roboto_bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="Test domain dengan berbagai metode"
                                    android:textSize="14sp"
                                    android:textColor="@color/on_surface_variant"
                                    android:fontFamily="@font/roboto_regular" />

                            </LinearLayout>

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_arrow_forward"
                                app:tint="@color/on_surface_variant" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- IP Troubleshooting Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardIPTroubleshooting"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="8dp"
                        app:cardBackgroundColor="@color/surface_color"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="20dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_marginEnd="20dp"
                                android:src="@drawable/ic_ip_troubleshooting"
                                app:tint="@color/accent_color" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="IP Troubleshooting"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/on_surface_color"
                                    android:fontFamily="@font/roboto_bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="Diagnosa masalah koneksi IP"
                                    android:textSize="14sp"
                                    android:textColor="@color/on_surface_variant"
                                    android:fontFamily="@font/roboto_regular" />

                            </LinearLayout>

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_arrow_forward"
                                app:tint="@color/on_surface_variant" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Proxy Server Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardProxyServer"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="8dp"
                        app:cardBackgroundColor="@color/surface_color"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="20dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_marginEnd="20dp"
                                android:src="@drawable/ic_proxy_server"
                                app:tint="@color/secondary_color" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Proxy Server"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/on_surface_color"
                                    android:fontFamily="@font/roboto_bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="Test koneksi melalui proxy"
                                    android:textSize="14sp"
                                    android:textColor="@color/on_surface_variant"
                                    android:fontFamily="@font/roboto_regular" />

                            </LinearLayout>

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_arrow_forward"
                                app:tint="@color/on_surface_variant" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu" />

</androidx.drawerlayout.widget.DrawerLayout>